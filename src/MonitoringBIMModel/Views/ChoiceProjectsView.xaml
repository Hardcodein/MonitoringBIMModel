<Window x:Class="MonitoringBIMModel.Views.ChoiceProjectsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitoringBIMModel.Views"
        xmlns:props="clr-namespace:MonitoringBIMModel.Properties"
        xmlns:vm ="clr-namespace:MonitoringBIMModel.ViewModels"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
         WindowStyle="None"
 
        Background="Transparent"
        AllowsTransparency="True"
        Title="{x:Static props:Resources.ChoiceProjectWindow}"
          d:DataContext="{d:DesignInstance vm:ChoiceProjectsViewModel}"
        Height="450" Width="800">

    <Window.DataContext>
        <vm:ChoiceProjectsViewModel/>
    </Window.DataContext>

    <Grid>


        <Border CornerRadius="12">
            <Border CornerRadius="10"                    
             BorderThickness="2"
             Opacity="0.95"
             >

                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#462AD8" Offset="0"/>
                        <GradientStop Color="#DA34AE" Offset="0.75"/>
                        <GradientStop Color="#8A16C1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="#060531" Offset="0"/>
                        <GradientStop Color="#1B1448" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    
                    
                    <TextBlock  Grid.Row ="0" 
                     Grid.ColumnSpan="1" 
                     Text  ="{x:Static props:Resources.ChoiceProject}"
                     FontSize="30"
                     FontWeight="Black"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"
                     Margin="10,10,10,10"
                     Foreground="White"/>
                    
                    <Button  Grid.Row ="0" 
                     Grid.Column="1" 
                     Content="{x:Static props:Resources.LearnActivityUsers}" 
                     Background="Purple"
                     Foreground="White"
                     FontSize="15"
                     FontWeight="Black"
                     Width="270"
                     Height="50"
                     HorizontalAlignment="Right"
                     Margin="5,5,30,5"
                     BorderThickness="0"
                     Command="{Binding LoadActivityUserWindowCommand}"/>

                    <ListBox Grid.Row="1"
                     Grid.RowSpan ="1"
                     Grid.ColumnSpan="2" 
                     ItemsSource="{Binding  Projects}"  
                     Background="MediumPurple"
                     Margin="50,5,50,5"
                     FontSize="20"
                     Foreground="White"
                     SelectedItem="{Binding SelectedProject, Mode=TwoWay}">
                        
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                     </ListBox>
                    <Button 
                      Content="{x:Static props:Resources.Open}"
                      Grid.ColumnSpan="2"
                      Grid.Row="2"
                      Width="150"
                      HorizontalAlignment="Right"
                      Margin="10,10,50,10"
                      FontWeight="Black"
                      FontSize="20"
                      Background ="Purple"
                      Foreground="White"
                      BorderThickness="0"
                      Command="{Binding LoadMainWindowCommand }"
                      />
                    <Button 
                      Content="{x:Static props:Resources.AboutProgram}"
                      Grid.ColumnSpan="2"
                      Grid.Row="2"
                      Width="200"
                      HorizontalAlignment="Left"
                      Margin="10,10,10,10"
                      FontWeight="Black"
                      FontSize="20"
                      Background ="Purple"
                      Foreground="White"
                      BorderThickness="0"
                      Command="{Binding LoadInformationWindowCommand }"/>
                    
                                         
                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
