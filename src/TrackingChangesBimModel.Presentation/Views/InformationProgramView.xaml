<Window x:Class="MonitoringBIMModel.Views.InformationProgramView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonitoringBIMModel.Views"
        xmlns:vm ="clr-namespace:MonitoringBIMModel.ViewModels"
        xmlns:props ="clr-namespace:MonitoringBIMModel.Properties"
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        d:DataContext="{d:DesignInstance vm:InformationProgramViewModel}">

    <Window.DataContext>
        <vm:InformationProgramViewModel/>
    </Window.DataContext>
    <Grid>
        <Border CornerRadius="12">
            <Border CornerRadius="10"                    
             BorderThickness="2"
             Opacity="0.95"
             >

                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#462AD8" Offset="0"/>
                        <GradientStop Color="#DA34AE" Offset="0.75"/>
                        <GradientStop Color="#8A16C1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>

                <Border.Background>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Color="#060531" Offset="0"/>
                        <GradientStop Color="#1B1448" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.ColumnSpan="2"
                               HorizontalAlignment="Center"
                               FontSize="30"
                               Foreground="White"
                               Margin="5,20,5,5"
                               Text="{x:Static props:Resources.VersionApp}"/>

                    <TextBlock Grid.Row="1"
                               Text="{x:Static props:Resources.Develop}"
                               Foreground="White"
                               FontSize="24"
                               Margin="50,20,5,5"
                               />
                    <ListView Grid.Row="1"
                              Grid.Column="1"
                              Background="Transparent"
                              Foreground="White"
                              ItemsSource="{Binding Developers}"
                              BorderThickness="0"
                              Margin="20"
                              FontSize="24" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    <TextBlock Grid.Row="2"
                               Grid.ColumnSpan="2"
                               
                               Foreground="White"
                               FontSize="22"
                               HorizontalAlignment="Right"
                               Margin = "5,5,40,5">
                        <Run Text="{x:Static props:Resources.RelizeDate}"/>
                        <Run Text="{x:Static props:Resources.DateApp}"/>

                    </TextBlock>
                    <Button 
                       Content="{x:Static props:Resources.Back}"
                       Grid.ColumnSpan="2"
                       Grid.Row="2"
                       Width="200"
                       HorizontalAlignment="Left"
                       Margin="10,10,10,10"
                       FontWeight="Black"
                       FontSize="20"
                       Background ="Purple"
                       Foreground="White"
                       BorderThickness="0"
                         Command="{Binding BackToMainWindowCommand}"/> 
                       

                </Grid>
            </Border>
        </Border>
    </Grid>
</Window>
